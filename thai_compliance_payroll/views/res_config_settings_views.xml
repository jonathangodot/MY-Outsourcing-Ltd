<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.thai.compliance.payroll</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="thai_compliance.thai_compliance_res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='thai_compliance']" position="inside">
                <h2>Thai Compliance Payroll</h2>
                <div class="row mt16 o_settings_container" name="thai_compliance_payroll">
                    <div class="col-12 col-lg-6 o_setting_box" id="thai_compliance_payroll_div">
                        
                        <div class="col-12 col-lg-6 o_setting_box" id="code_gross_setting">
                            <label for="code_gross"/>
                            <field name="code_gross"/>
                        </div>
                    
                        <div class="col-12 col-lg-6 o_setting_box" id="code_gross_setting">
                            <label for="code_tax"/>
                            <field name="code_tax"/>
                        </div>
                    
                        <div class="col-12 col-lg-6 o_setting_box" id="code_gross_setting">
                            <label for="code_secu"/>
                            <field name="code_secu"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
