<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_employee_form_name_group" model="ir.ui.view">
    <field name="name">view.employee.form.inherit.extension</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form" />
    <field name="priority" eval="4"/>
    <field name="arch" type="xml">
      <xpath id="local_name" expr="//*[@id='name_group']" position="inside">
        <field name="local_name" placeholder="Full Name In Local Alphabet"/>
      </xpath>
    </field>
  </record>
</odoo>
